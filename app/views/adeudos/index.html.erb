<% case current_user.tipo %>
<% when 1 %>
<h2 class="text-center">ADEUDOS CON ERROR EN DATA WAREHOUSE</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Adeudo </th>
      <th>Id Prestamo</th> 
      <th>Cargo Día</th>
      <th>Opciones</th>
    </tr>
    <% @adeudos_data.each do |adeudo| %>
      <% if adeudo.errorCargo %>
        <tr>
          <th><%= adeudo.id_Adeudos %></th> 
          <th><%= adeudo.id_Prestamo %></th>
          <th class ='alert-danger' ><%= adeudo.Cargo_Dia %></th>  
          <th><%= link_to "Editar", edit_adeudo_path(adeudo.id_Adeudos) %>
          <%= link_to "Eliminar", adeudo, method: :delete, data: {confirm: "Deseas eliminar el adeudo con ID: #{adeudo.id_Adeudos}?"} %></th> 
        </tr>
      <%end%>
    <%end%>
  </table>
<% when 4 %>
  <h2 class="text-center">ADEUDOS CON ERROR EN BIBLIOTECA</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Adeudo </th>
      <th>Id Prestamo</th> 
      <th>Cargo Día</th>
      <th>Opciones</th>
    </tr>
    <% @adeudos_data.each do |adeudo| %>
      <% if adeudo.errorCargo %>
        <tr>
          <th><%= adeudo.id_Adeudos %></th> 
          <th><%= adeudo.id_Prestamo %></th>
          <th class ='alert alert-danger' ><%= adeudo.Cargo_Dia %></th>  
          <th><%= link_to "Editar", edit_adeudo_path(adeudo.id_Adeudos) %>
          <%= link_to "Eliminar", adeudo, method: :delete, data: {confirm: "Deseas eliminar el adeudo con ID: #{adeudo.id_Adeudos}?"} %></th> 
        </tr>
      <%end%>
    <%end%>
  </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_adeudos_path, data: { confirm: "Desea eliminar todos los registros de Adeudos?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>

