<h1 class="text-center">AreaMaestro</h1>
<!----<p>Find me in app/views/area_maestro/index.html.erb</p>--->
<h2 class="text-center">AREAS DE MAESTROS CON ERROR EN DATA WAREHOUSE</h2>
<% case current_user.tipo %>
<% when 1 %>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Area Maestro </th>
        <th>Nombre</th> 
        <th>Descripción</th>
        <th>Opciones</th>
    </tr>
    <% @area_maestro_data.each do |area| %>
        <% if area.errorNombre %>
        <tr>
            <th><%= area.Id_Area_mtro %></th> 
            <th class ='alert alert-danger' ><%= area.Nombre %></th> 
            <th><%= area.Descripción %></th> 
            <th><%= link_to "Editar", edit_area_maestro_path(area.Id_Area_mtro) %>
            <%= link_to "Eliminar", area, method: :delete, data: {confirm: "Deseas eliminar el área #{area.Nombre}?"} %></th> 
        </tr>
        <%end%>
    <%end%>
</table>
<% when 2 %>
<h2 class="text-center">AREAS DE MAESTROS CON ERROR EN CONTROL ACADEMICO</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Area Maestro </th>
        <th>Nombre</th> 
        <th>Descripción</th>
        <th>Opciones</th>
    </tr>
    <% @area_maestro_data.each do |area| %>
        <% if area.errorNombre == 1%>
        <tr>
            <th><%= area.Id_Area_mtro %></th> 
            <th class ='alert alert-danger' ><%= area.Nombre %></th> 
            <th><%= area.Descripción %></th> 
            <th><%= link_to "Editar", edit_area_maestro_path(area.Id_Area_mtro) %>
            <%= link_to "Eliminar", area, method: :delete, data: {confirm: "Deseas eliminar el área #{area.Nombre}?"} %></th> 
        </tr>
        <%end%>
    <%end%>
</table>
<% when 4 %>
<h2 class="text-center">AREAS DE MAESTROS CON ERROR EN BIBLIOTECA</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Area Maestro </th>
        <th>Nombre</th> 
        <th>Descripción</th>
        <th>Opciones</th>
    </tr>
    <% @area_maestro_data.each do |area| %>
        <% if area.errorNombre == 2 %>
        <tr>
            <th><%= area.Id_Area_mtro %></th> 
            <th class ='alert alert-danger' ><%= area.Nombre %></th> 
            <th><%= area.Descripción %></th> 
            <th><%= link_to "Editar", edit_area_maestro_path(area.Id_Area_mtro) %>
            <%= link_to "Eliminar", area, method: :delete, data: {confirm: "Deseas eliminar el área #{area.Nombre}?"} %></th> 
        </tr>
        <%end%>
    <%end%>
</table>
<%end%>
<div class="text-center">
    <%= link_to "Eliminar todo", eliminar_areas_maestro_path, data: { confirm: "Desea eliminar todos los registros de Áreas de maestros?" }, class: 'btn btn-primary btn-lg' %>
    <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>
