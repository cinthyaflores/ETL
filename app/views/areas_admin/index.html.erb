<% case current_user.tipo %>
<% when 1 %>
<h2 class="text-center">AREAS ADMINISTRATIVAS CON ERROR EN DATA WAREHOUSE</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Area Admin </th>
        <th>Nombre</th> 
        <th>Descripción</th>
        <th>Opciones</th>
    </tr>
    <% @areas_admin_data.each do |area| %>
        <% if area.errorNombre %>
            <tr>
                <th><%= area.Id_Area %></th> 
                <th class ='alert alert-danger'><%= area.Nombre %></th> 
                <th><%= area.Descr %></th> 
                <th><%= link_to "Editar", edit_areas_admin_path(area.Id_Area) %>
                <%= link_to "Eliminar", area, method: :delete, data: {confirm: "Deseas eliminar el área con ID: #{area.Id_Area}?"} %></th> 
            </tr>
        <%end%>
    <%end%>
</table>
<% when 2 %>
<h2 class="text-center">AREAS ADMINISTRATIVAS CON ERROR EN CONTROL ACADEMICO</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Area Admin </th>
        <th>Nombre</th> 
        <th>Descripción</th>
        <th>Opciones</th>
    </tr>
    <% @areas_admin_data.each do |area| %>
        <% if area.errorNombre %>
            <tr>
                <th><%= area.Id_Area %></th> 
                <th class ='alert alert-danger'><%= area.Nombre %></th> 
                <th><%= area.Descr %></th> 
                <th><%= link_to "Editar", edit_areas_admin_path(area.Id_Area) %>
                <%= link_to "Eliminar", area, method: :delete, data: {confirm: "Deseas eliminar el área con ID: #{area.Id_Area}?"} %></th> 
            </tr>
        <%end%>
    <%end%>
</table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_areas_admin_path, data: { confirm: "Desea eliminar todos los registros de Áreas Administrativas?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>
