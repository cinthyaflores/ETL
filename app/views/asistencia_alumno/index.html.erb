<% case current_user.tipo %>
<% when 1 %>
    <h2 class="text-center">ASISTENCIA DE ALUMNOS ACTIVIDADES EXTRAESCOLARES EN DATA WAREHOUSE</h2>
    <table style="width:100%", class= "table table-striped table-bordered table-sm">
        <tr>
            <th>Id Alumno</th>
            <th>Id Periodo</th>
            <th>Asistencias</th> 
            <th>Faltas</th>
            <th>Retardos</th>
            <th>Opciones</th>
        </tr>
        <% @asistencia_alumno_data.each do |alumno| %>
            <% if alumno.errorAsistencias ||alumno.errorFaltas ||alumno.errorRetardos %>
            <tr>
                <th><%= alumno.Id_alumno%></th> 
                <th><%= alumno.Id_Periodo %></th> 
                <th class ="<%= 'alert-danger' if alumno.errorAsistencias == 1 %>"  ><%= alumno.Asistencias%></th> 
                <th class ="<%= 'alert-danger' if alumno.errorFaltas == 1 %>"> <%= alumno.Faltas%></th> 
                <th class ="<%= 'alert-danger' if alumno.errorRetardos == 1 %>"><%= alumno.Retardos%></th> 
                <th><%= link_to "Editar", edit_asistencia_alumno_path(alumno.id_asistencia_alumno) %>
                <%= link_to "Eliminar", alumno, method: :delete, data: {confirm: "Deseas eliminar los registros del alumno con ID: #{alumno.Id_alumno}?"} %></th> 
            </tr>
            <%end%>
        <%end%>
    </table>
<% when 3 %>
    <h2 class="text-center">ASISTENCIA DE ALUMNOS ACTIVIDADES EXTRAESCOLARES EN BD EXTRAESCOLARES</h2>
    <table style="width:100%", class= "table table-striped table-bordered table-sm">
        <tr>
            <th>Id Alumno</th>
            <th>Id Periodo</th>
            <th>Asistencias</th> 
            <th>Faltas</th>
            <th>Retardos</th>
            <th>Opciones</th>
        </tr>
        <% @asistencia_alumno_data.each do |alumno| %>
             <% if alumno.errorAsistencias ||alumno.errorFaltas ||alumno.errorRetardos %>
            <tr>
                <th><%= alumno.Id_alumno%></th> 
                <th><%= alumno.Id_Periodo %></th> 
                <th class ="<%= 'alert-danger' if alumno.errorAsistencias == 1 %>"  ><%= alumno.Asistencias%></th> 
                <th class ="<%= 'alert-danger' if alumno.errorFaltas == 1 %>"> <%= alumno.Faltas%></th> 
                <th class ="<%= 'alert-danger' if alumno.errorRetardos == 1 %>"><%= alumno.Retardos%></th> 
                <th><%= link_to "Editar", edit_asistencia_alumno_path(alumno.id_asistencia_alumno) %>
                <%= link_to "Eliminar", alumno, method: :delete, data: {confirm: "Deseas eliminar los registros del alumno con ID: #{alumno.Id_alumno}?"} %></th> 
            </tr>
            <%end%>
        <%end%>
    </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_asistencia_alumnos_path, data: { confirm: "Desea eliminar todos los registros?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>