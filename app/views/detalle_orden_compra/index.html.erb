            <th class =<%= 'alert-danger' if orden.errorCosto == 1 %>><%= orden.Costo_unitario%></th>
            <th><%= link_to "Editar", edit_detalle_orden_compra_path(orden.id_detalle_orden) %>
          <%= link_to "Eliminar", detalle_orden_compra_path(orden.id_detalle_orden), method: :delete, data: {confirm: "Deseas eliminar el detalle con ID: #{orden.id_detalle_orden}?"} %></th>
        </tr>
    <%end%>
    <%end%>
</table>
