<% case current_user.tipo %>
<% when 1 %>
<h2 class="text-center">DETALLE DE COMPRA DE RECURSOS DE EXTRAESCOLARES EN DATA WAREHOUSE</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Detalle Orden</th>
        <th>Id Orden</th>
        <th>Id Recurso</th>
        <th>Cantidad</th>
        <th>Costo_unitario</th> 
        <th>Opciones</th> 
    </tr>
    <% @orden_data.each do |orden| %>
    <%if orden.errorCosto == 1 || orden.errorCantidad == 1 %>
