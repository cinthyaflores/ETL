<h1 class="text-center">Registrar nuevo usuario</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: 'shadow p-3 mb-5 bg-white rounded'}) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group text-center">
    <%= f.label  t('activerecord.attributes.user.email') %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.label  t('activerecord.attributes.user.password') %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group text-center">
    <%= f.label  t('activerecord.attributes.user.password_confirmation') %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group text-center">
  <h4>Elija el rol que va representar</h4>
    <%= f.label :tipo do %>
      <%= f.radio_button :tipo, 1 %> Administrador
      <%= f.radio_button :tipo, 2 %> Control Academico
      <%= f.radio_button :tipo, 3 %> Extraescolares
      <%= f.radio_button :tipo, 4 %> Biblioteca
    <%end%>
  </div>

  <div class="form-group text-center">
    <%= f.submit 'Registrarse', class: 'btn btn-primary' %>
  </div>
<% end %>
<div class="text-center">
<%= render 'devise/shared/links' %>
</div>
</body>