<% case current_user.tipo %>
<% when 1 %>
  <h2 class="text-center">EDITORIALES CON ERROR EN DATA WAREHOUSE</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Editorial</th>
      <th>Nombre</th>
      <th>CP</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Id_Pais</th>
      <th>Opciones</th>
    </tr>
    <% @editoriales_data.each do |editorial| %>
    <%if editorial.errorNombre==1||editorial.errorTelefono ==1%>
      <tr>
        <th><%= editorial.Id_Editorial %></th>
        <th class="<%= 'alert-danger' if editorial.errorNombre == 1  %>"><%= editorial.Nombre %></th>
        <th><%= editorial.CP %></th>
        <th><%= editorial.Direccion %></th>
        <th class="<%= 'alert-danger' if editorial.errorTelefono == 1  %>"><%= editorial.Telefono %></th>
        <th><%= editorial.Id_Pais %></th>
        <th>
          <%= link_to "Editar", edit_editoriale_path(editorial.Id_Editorial) %>
          <%= link_to "Eliminar", editoriale_path(editorial.Id_Editorial), method: :delete, data: {confirm: "Deseas eliminar la editorial con ID: #{editorial.Id_Editorial}?"} %>
        </th>
      </tr>
      <%end%>
    <%end%>
  </table>
<% when 4 %>
  <h2 class="text-center">EDITORIALES CON ERROR EN BIBLIOTECA</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Editorial</th>
      <th>Nombre</th>
      <th>CP</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Id_Pais</th>
      <th>Opciones</th>
    </tr>
    <% @editoriales_data.each do |editorial| %>
    <%if editorial.errorNombre==1||editorial.errorTelefono ==1%>
      <tr>
        <th><%= editorial.Id_Editorial %></th>
        <th class="<%= 'alert-danger' if editorial.errorNombre == 1  %>"><%= editorial.Nombre %></th>
        <th><%= editorial.CP %></th>
        <th><%= editorial.Direccion %></th>
        <th class="<%= 'alert-danger' if editorial.errorTelefono == 1  %>"><%= editorial.Telefono %></th>
        <th><%= editorial.Id_Pais %></th>
        <th>
          <%= link_to "Editar", edit_editoriale_path(editorial.Id_Editorial) %>
          <%= link_to "Eliminar", editoriale_path(editorial.Id_Editorial), method: :delete, data: {confirm: "Deseas eliminar la editorial con ID: #{editorial.Id_Editorial}?"} %>
        </th>
      </tr>
    <%end%>
    <%end%>
  </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_editoriales_path, data: { confirm: "Desea eliminar todos los registros de Editoriales?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
