<h1 class="text-center" >Grupos</h1>
<% case current_user.tipo %>
<% when 1 %>
    <h2 class="text-center">GRUPOS CON ERRORES EN DATAWAREHOUSE</h2>
    <table style="width:100%", class= "table table-striped table-bordered table-sm">
        <tr>
            <th>Id Clase</th>
            <th>Id Materia</th>
            <th>Id Hora</th> 
            <th>Id Maestro</th>
            <th>Id Periodo</th>
            <th>Id Aula</th>
            <th>Clave</th>
            <th>Opciones</th>
        </tr>
        <% @grupos_data.each do |grupo| %>
            <%if grupo.errorClave %>
                <tr>
                    <th><%= grupo.Id_Grupo %></th> 
                    <th><%= grupo.Id_Materia %></th> 
                    <th><%= grupo.Id_hora %></th>
                    <th><%= grupo.Id_Maestro %></th> 
                    <th><%= grupo.Id_Periodo %></th>
                    <th><%= grupo.Id_Aula %></th>
                    <th class ='alert alert-danger'><%= grupo.Clave %></th>
                    <th><%= link_to "Editar", edit_grupo_path(id: grupo.Id_Grupo) %>
                    <%= link_to "Eliminar", grupo, method: :delete, data: { confirm: "Desea eliminar #{grupo.Clave}?"} %></th>
                </tr>
            <%end%>
        <%end%>
    </table>
<% when 2 %>
<h2 class="text-center" >GRUPOS CON ERRORES EN CONTROL ACADEMICO</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Clase</th>
        <th>Id Materia</th>
        <th>Id Hora</th> 
        <th>Id Maestro</th>
        <th>Id Periodo</th>
        <th>Id Aula</th>
        <th>Clave</th>
        <th>Opciones</th>
    </tr>
        <% @grupos_data.each do |grupo| %>
            <%if grupo.errorClave %>
                <tr>
                    <th><%= grupo.Id_Grupo %></th> 
                    <th><%= grupo.Id_Materia %></th> 
                    <th><%= grupo.Id_hora %></th>
                    <th><%= grupo.Id_Maestro %></th> 
                    <th><%= grupo.Id_Periodo %></th>
                    <th><%= grupo.Id_Aula %></th>
                    <th class ='alert alert-danger'><%= grupo.Clave %></th>
                    <th><%= link_to "Editar", edit_grupo_path(id: grupo.Id_Grupo) %>
                    <%= link_to "Eliminar", grupo, method: :delete, data: { confirm: "Desea eliminar #{grupo.Clave}?"} %></th>
                </tr>
            <%end%>
        <%end%>
</table>
<%end%>
<div class="text-center">
    <%= link_to "Eliminar todo", eliminar_grupo_path, data: { confirm: "Desea eliminar todos los registros de grupo?" }, class: 'btn btn-primary btn-lg' %>
    <%if @errores %>
            <%= link_to "Continuar" ,'', data: { confirm: "Hijole, no puedes continuar si no has quitado los errores :(" }, class: 'btn btn-primary btn-lg' %>
    <%else%>
            <%= link_to "Continuar" , maestros_path, method: :get , class: 'btn btn-primary btn-lg'%>
    <%end%>
</div>
