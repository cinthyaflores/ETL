<% case current_user.tipo %>
<% when 1 %>
  <h2 class="text-center">LIBROS CON ERROR EN DATA WAREHOUSE</h2>
    <table style="width:100%", class= "table table-striped table-bordered table-sm">
      <tr>
        <th>Id Libro </th>
        <th>Edición</th> 
        <th>Año publicación</th>
        <th>ISBN</th>
        <th>Id Editorial</th>
        <th>Opciones</th>
      </tr>
      <% @libros_data.each do |libro| %>
      <%if libro.errorISBN == 1 %>
          <tr>
            <th><%= libro.idLibro %></th> 
            <th><%= libro.edicion %></th>
            <th><%= libro.aPublicacion %></th>
            <th class =<%='alert-danger'if libro.errorISBN == 1 %> ><%= libro.ISBN %></th>
            <th><%= libro.id_Editorial %></th>

            <th><%= link_to "Editar", edit_libro_path(libro.idLibro) %>
            <%= link_to "Eliminar", libro, method: :delete, data: {confirm: "Deseas eliminar el libro con ID: #{libro.idLibro}?"} %></th> 
          </tr>
          <%end%>
        <%end%>
    </table>
<% when 4 %>
<h2 class="text-center">LIBROS CON ERROR EN BIBLIOTECA</h2>
    <table style="width:100%", class= "table table-striped table-bordered table-sm">
      <tr>
        <th>Id Libro </th>
        <th>Edición</th> 
        <th>Año publicación</th>
        <th>ISBN</th>
        <th>Id Editorial</th>
        <th>Opciones</th>
      </tr>
      <% @libros_data.each do |libro| %>
      <%if libro.errorISBN == 1 %>
          <tr>
            <th><%= libro.idLibro %></th> 
            <th><%= libro.edicion %></th>
            <th><%= libro.aPublicacion %></th>
            <th class =<%='alert-danger'if libro.errorISBN == 1 %> ><%= libro.ISBN %></th>
            <th><%= libro.id_Editorial %></th>

            <th><%= link_to "Editar", edit_libro_path(libro.idLibro) %>
            <%= link_to "Eliminar", libro, method: :delete, data: {confirm: "Deseas eliminar el libro con ID: #{libro.idLibro}?"} %></th> 
          </tr>
          <%end%>
        <%end%>
    </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_libros_path, data: { confirm: "Desea eliminar todos los registros de Libros?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>
