<% case current_user.tipo %>
<% when 1 %>
  <h2 class="text-center">MATERIALES CON ERROR EN DATA WAREHOUSE</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Material></th>
      <th>Nombre</th>
      <th>Autor</th>
      <th>existencia</th>
      <th>id Pais</th>
      <th>id Idioma</th>
      <th>Tipo Material</th>
      <th>Id estante</th>
      <th>Opciones</th>
    </tr>
    <% @materiales_data.each do |materiales| %>
     <% if materiales.errorAutor == 1 || materiales.errorExistencia == 1  %>
      <tr>
        <th><%= materiales.id_Material %></th>
        <th><%= materiales.nombre %></th>
        <th class="<%= 'alert-danger' if materiales.errorAutor == 1  %>"><%= materiales.autor %></th>
        <th class="<%= 'alert-danger' if materiales.errorExistencia == 1  %>"><%= materiales.existencia %></th>
        <th><%= materiales.id_Pais %></th>
        <th><%= materiales.Id_idioma %></th>
        <th><%= materiales.Tipo_Material %></th>
        <th><%= materiales.Id_Estante %></th>
        <th>
          <%= link_to "Editar", edit_materiale_path(materiales.id_Material) %>
          <%= link_to "Eliminar", materiales, method: :delete, data: {confirm: "Deseas eliminar el material con ID: #{materiales.id_Material}?"} %>
        </th>
      </tr>
      <%end%>
    <%end%>
  </table>
<% when 4 %>
  <h2 class="text-center">MATERIALES CON ERROR EN BIBLIOTECA</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Material</th>
      <th>Nombre</th>
      <th>Autor</th>
      <th>Existencia</th>
      <th>Id Pais</th>
      <th>Id Idioma</th>
      <th>Tipo Material</th>
      <th>Id estante</th>
      <th>Opciones</th>
    </tr>
    <% @materiales_data.each do |materiales| %>
    <% if materiales.errorAutor == 1 || materiales.errorExistencia == 1  %>
      <tr>
        <th><%= materiales.id_Material %></th>
        <th><%= materiales.nombre %></th>
        <th class="<%= 'alert-danger' if materiales.errorAutor == 1  %>"><%= materiales.autor %></th>
        <th class="<%= 'alert-danger' if materiales.errorExistencia == 1  %>"><%= materiales.existencia %></th>
        <th><%= materiales.id_Pais %></th>
        <th><%= materiales.Id_idioma %></th>
        <th><%= materiales.Tipo_Material %></th>
        <th><%= materiales.Id_Estante %></th>
        <th>
          <%= link_to "Editar", edit_materiale_path(materiales.id_Material) %>
          <%= link_to "Eliminar", materiales, method: :delete, data: {confirm: "Deseas eliminar el material con ID: #{materiales.id_Material}?"} %>
        </th>
      </tr>
       <%end%>
    <%end%>
  </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_materiales_path, data: { confirm: "Desea eliminar todos los registros de materiales?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>
