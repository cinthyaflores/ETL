<h1 class="text-center">Movilidad</h1>
<% case current_user.tipo %>
<% when 1 %>
    <h2 class="text-center">MOVILIDAD CON ERRORES EN DATAWAREHOUSE</h2>
    <table style="width:100%", class= "table table-striped table-bordered table-sm">
        <tr>
            <th>Id Movilidad</th>
            <th>Id Carrera</th>
            <th>País</th> 
            <th>Estado</th>
            <th>Universidad</th>
            <th>Opciones</th>
        </tr>
        <% @movilidad_data.each do |movi| %>
            <%if movi.errorPais || movi.errorEstado %>
                <tr>
                    <th><%= movi.Id_Movilidad %></th>
                    <th><%= movi.Id_Carrera %></th> 
                    <%if movi.errorPais == 1%>
                      <th class ='alert alert-danger'><%= movi.País %></th>
                    <%else%>
                      <th><%= movi.País %></th>
                    <%end%>
                    <%if movi.errorEstado == 1%>
                      <th class ='alert alert-danger'><%= movi.Estado %></th>
                    <%else%>
                      <th><%= movi.Estado %></th>
                    <%end%>
                    <th><%= movi.Universidad %></th>
                    <th><%= link_to "Editar", edit_movilidad_path(id: movi.Id_Movilidad) %>
                    <%= link_to "Eliminar", movi, method: :delete, data: { confirm: "Desea eliminar movilidad a #{movi.País}?"} %></th>
                </tr>
            <%end%>
        <%end%>
    </table>
<% when 2 %>
  <h2 class="text-center">MOVILIDAD CON ERRORES EN CONTROL ACADEMICO</h2>
    <table style="width:100%", class= "table table-striped table-bordered table-sm">
        <tr>
            <th>Id Movilidad</th>
            <th>Id Carrera</th>
            <th>País</th> 
            <th>Estado</th>
            <th>Universidad</th>
            <th>Opciones</th>
        </tr>
        <% @movilidad_data.each do |movi| %>
            <%if movi.errorPais || movi.errorEstado %>
                <tr>
                    <th><%= movi.Id_Movilidad %></th>
                    <th><%= movi.Id_Carrera %></th> 
                    <%if movi.errorPais == 1%>
                      <th class ='alert alert-danger'><%= movi.País %></th>
                    <%else%>
                      <th><%= movi.País %></th>
                    <%end%>
                    <%if movi.errorEstado == 1%>
                      <th class ='alert alert-danger'><%= movi.Estado %></th>
                    <%else%>
                      <th><%= movi.Estado %></th>
                    <%end%>
                    <th><%= movi.Universidad %></th>
                    <th><%= link_to "Editar", edit_movilidad_path(id: movi.Id_Movilidad) %>
                    <%= link_to "Eliminar", movi, method: :delete, data: { confirm: "Desea eliminar movilidad a #{movi.País}?"} %></th>
                </tr>
            <%end%>
        <%end%>
    </table>
<%end%>
<div class="text-center">
    <%= link_to "Eliminar todo", eliminar_movilidad_path, data: { confirm: "Desea eliminar todos los registros de movilidad?" }, class: 'btn btn-primary btn-lg' %>
    <%if @errores %>
            <%= link_to "Continuar" ,'', data: { confirm: "Hijole, no puedes continuar si no has quitado los errores :(" }, class: 'btn btn-primary btn-lg' %>
    <%else%>
            <%= link_to "Continuar" , personal_admin_index_path, method: :get , class: 'btn btn-primary btn-lg'%>
    <%end%>
</div>
