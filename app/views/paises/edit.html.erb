<div class = "container">
  <h2 class="text-center">Editar Pais</h2>
  <%= simple_form_for @pais, method: :patch do |f| %>
    <%@pais.errors.each do |value, message|%>
      <h5 class= "alert alert-danger"><%=message%></h5>
    <%end%>
    <%= f.input :id_Pais, readonly: true %>
    <% if @errores[0] == 1 %>
      <%= f.input :nombre_pais, error: false %>
    <% else %>
      <%= f.input :nombre_pais, readonly: true %>
    <% end %>
    <% if @errores[1] == 1 %>
      <%= f.input :clave, error: false %>
    <% else %>
      <%= f.input :clave, readonly: true %>
    <% end %>
    <div class= "text-center">
      <%= f.submit 'Guardar', class: "btn btn-primary"%>
      <%= link_to  "Regresar", paises_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>