<% case current_user.tipo %>
<% when 1 %>
  <h2 class="text-center">PAISES CON ERROR EN DATA WAREHOUSE</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Pais</th>
      <th>Nombre Pais</th>
      <th>Clave</th>
      <th>Opciones</th>
    </tr>
    <% @paises_data.each do |pais| %>
      <% if pais.errorNombre || pais.errorClave %>
        <tr>
          <th><%= pais.id_Pais %></th>
          <th class="<%= 'alert-danger' if pais.errorNombre == 1 %>"><%= pais.nombre_pais %></th>
          <th class="<%= 'alert-danger' if pais.errorClave == 1  %>"><%= pais.clave %></th>
          <th>
            <%= link_to "Editar", edit_paise_path(pais.id_Pais) %>
            <%= link_to "Eliminar", pais, method: :delete, data: {confirm: "Deseas eliminar el pais con ID: #{pais.id_Pais}?"} %>
          </th>
        </tr>
      <%end%>
    <%end%>
  </table>
<% when 4 %>
  <h2 class="text-center">PAISES CON ERROR EN BIBLIOTECA</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Pais</th>
      <th>Nombre Pais</th>
      <th>Clave</th>
      <th>Opciones</th>
    </tr>
    <% @paises_data.each do |pais| %>
      <% if pais.errorNombre || pais.errorClave %>
        <tr>
          <th><%= pais.id_Pais %></th>
          <th class="<%= 'alert-danger' if pais.errorNombre == 1  %>"><%= pais.nombre_pais %></th>
          <th class="<%= 'alert-danger' if pais.errorClave == 1  %>"><%= pais.clave %></th>
          <th>
            <%= link_to "Editar", edit_paise_path(pais.id_Pais) %>
            <%= link_to "Eliminar", pais, method: :delete, data: {confirm: "Deseas eliminar el pais con ID: #{pais.id_Pais}?"} %>
          </th>
        </tr>
      <%end%>
    <%end%>
  </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_paises_path, data: { confirm: "Desea eliminar todos los registros de paises?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>
