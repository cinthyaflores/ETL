<h1 class="text-center">Periodo</h1>
<h2 class="text-center">PERIODOS EN DATA WAREHOUSE</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Periodo</th>
        <th>Id en Extraescolares</th>
        <th>Nombre</th> 
        <th>Fecha Inicio</th>
        <th>Fecha Fin</th>
        <th>Abreviacion</th>
    </tr>
    <% @periodosData.each do |periodo| %>
        <tr>
            <th><%= periodo.Id_Periodo %></th> 
            <th><%= periodo.Id_Periodo_Extra %></th> 
            <th><%= periodo.Nombre %></th> 
            <th><%= periodo.FechaIn %></th> 
            <th><%= periodo.FechaFin %></th>
            <th><%= periodo.Abreviacion %></th>
        </tr>
    <%end%>
</table>
