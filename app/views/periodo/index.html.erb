<h1>Periodo#index</h1>
<h2>PERIODOS EN CONTROL ACADEMICO</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Periodo</th>
        <th>Nombre</th> 
        <th>Fecha Inicio</th>
        <th>Fecha Fin</th>
        <th>Abreviacion</th>
    </tr>
    <% @periodosCA.each do |periodo| %>
        <tr>
            <th><%= periodo.Id_Periodo %></th> 
            <th><%= periodo.Nombre %></th> 
            <th><%= periodo.FechaIn %></th> 
            <th><%= periodo.FechaFin %></th>
            <th><%= periodo.Abreviacion %></th>
        </tr>
    <%end%>
</table>
<h2>PERIODOS EN EXTRAESCOLARES</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Periodo</th>
        <th>Rango Fecha</th> 
        <th>Nombre</th>
    </tr>
    <% @periodosE.each do |periodo| %>
        <tr>
            <th><%= periodo.Id_periodo %></th> 
            <th><%= periodo.Rango_fecha %></th> 
            <th><%= periodo.Nombre %></th> 
        </tr>
    <%end%>
</table>
