
<h1 class="text-center" >PersonalAdmin</h1>
<% case current_user.tipo %>
<% when 1 %>
    <h2 class="text-center" >PERSONAL ADMINISTRATIVO CON ERRORES EN DATAWAREHOUSE</h2>
    <table style="width:100%", class= "table table-striped table-bordered table-sm">
        <tr>
            <th>Id Personal</th>
            <th>Id Area</th>
            <th>Nombre</th> 
            <th>E-mail</th>
            <th>Fecha de Contr.</th>
            <th>Estado</th>
            <th>Opciones</th>
        </tr>
        <% @pers_admin_data.each do |personal| %>
            <%if personal.errorNombre || personal.errorEstado %>
                <tr>
                    <th><%= personal.Id_Pers %></th>
                    <th><%= personal.Id_Area %></th> 
                    <%if personal.errorNombre == 1%>
                      <th class ='alert alert-danger'><%= personal.Nombre %></th>
                    <%else%>
                      <th><%= personal.Nombre %></th>
                    <%end%>
                    <th><%= personal.CorreoE %></th>
                    <th><%= personal.Fecha_Cont %></th>
                    <%if personal.errorEstado == 1%>
                      <th class ='alert alert-danger'><%= personal.Estado %></th>
                    <%else%>
                      <th><%= personal.Estado %></th>
                    <%end%>
                    <th><%= link_to "Editar", edit_personal_admin_path(id: personal.Id_Pers) %>
                    <%= link_to "Eliminar", personal, method: :delete, data: { confirm: "Desea eliminar a #{personal.Nombre}?"} %></th>
                </tr>
            <%end%>
        <%end%>
    </table>
<% when 2 %>
<h2 class="text-center" >PERSONAL ADMINISTRATIVO CON ERRORES EN CONTROL ACADEMICO</h2>
<table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
        <th>Id Personal</th>
        <th>Id Area</th>
        <th>Nombre</th> 
        <th>E-mail</th>
        <th>Fecha de Contr.</th>
        <th>Estado</th>
        <th>Opciones</th>
    </tr>
    <% @pers_admin_data.each do |personal| %>
            <%if personal.errorNombre || personal.errorEstado %>
                <tr>
                    <th><%= personal.Id_Pers %></th>
                    <th><%= personal.Id_Area %></th> 
                    <%if personal.errorNombre == 1%>
                      <th class ='alert alert-danger'><%= personal.Nombre %></th>
                    <%else%>
                      <th><%= personal.Nombre %></th>
                    <%end%>
                    <th><%= personal.CorreoE %></th>
                    <th><%= personal.Fecha_Cont %></th>
                    <%if personal.errorEstado == 1%>
                      <th class ='alert alert-danger'><%= personal.Estado %></th>
                    <%else%>
                      <th><%= personal.Estado %></th>
                    <%end%>
                    <th><%= link_to "Editar", edit_personal_admin_path(id: personal.Id_Pers) %>
                    <%= link_to "Eliminar", personal, method: :delete, data: { confirm: "Desea eliminar a #{personal.Nombre}?"} %></th>
                </tr>
            <%end%>
    <%end%>
</table>
<%end%>
<div class="text-center">
    <%= link_to "Eliminar todo", eliminar_personal_admin_path, data: { confirm: "Desea eliminar todos los registros de Personal Administrativo?" }, class: 'btn btn-primary btn-lg' %>
    <%if @errores %>
            <%= link_to "Continuar" ,'', data: { confirm: "Hijole, no puedes continuar si no has quitado los errores :(" }, class: 'btn btn-primary btn-lg' %>
    <%else%>
            <%= link_to "Continuar" , descargar_etl_path, method: :get , class: 'btn btn-primary btn-lg'%>
    <%end%>
</div>