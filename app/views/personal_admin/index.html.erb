    <% @pers_admin_data.each do |personal| %>
            <%if personal.errorNombre || personal.errorEstado %>
                <tr>
                    <th><%= personal.Id_Pers %></th>
                    <th><%= personal.Id_Area %></th> 
                    <%if personal.errorNombre == 1%>
                      <th class ='alert alert-danger'><%= personal.Nombre %></th>
                    <%else%>
                      <th><%= personal.Nombre %></th>
                    <%end%>
                    <th><%= personal.CorreoE %></th>
                    <th><%= personal.Fecha_Cont %></th>
                    <%if personal.errorEstado == 1%>
                      <th class ='alert alert-danger'><%= personal.Estado %></th>
                    <%else%>
                      <th><%= personal.Estado %></th>
                    <%end%>
                    <th><%= link_to "Editar", edit_personal_admin_path(id: personal.Id_Pers) %>
                    <%= link_to "Eliminar", personal, method: :delete, data: { confirm: "Desea eliminar a #{personal.Nombre}?"} %></th>
                </tr>
            <%end%>
    <%end%>
</table>
<%end%>
<%if @errores %>
    <%= link_to "CONTINUAR" ,'', data: { confirm: "No puedes continuar si no has quitado los errores :(" } %>
<%else%>
    <%= link_to "CONTINUAR" , descargar_etl_path, method: :get %>
<%end%>