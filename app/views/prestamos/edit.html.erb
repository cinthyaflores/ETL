<div class = "container">
  <h2 class="text-center">Editar Prestamo</h2>
  <%= simple_form_for @prestamo, method: :patch do |f| %>
    <%@prestamo.errors.each do |value, message|%>
      <h5 class= "alert alert-danger"><%=message%></h5>
    <%end%>
    <%= f.input :Id_periodo, readonly: true %>
    <%= f.input :Id_maestro_ex, readonly: true %>
    <%= f.input :Id_prestamo, readonly: true %>
    <%= f.input :Fechaprestamo, readonly: true %>
    <%= f.input :Fechaentrega, readonly: true %>
    <%= f.input :Estado, error: false %>
    <div class= "text-center">
      <%= f.submit 'Guardar', class: "btn btn-primary"%>
      <%= link_to  "Regresar", prestamos_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>