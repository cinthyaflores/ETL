<% case current_user.tipo %>
<% when 1 %>
  <h2 class="text-center">PRESTAMOS CON ERROR EN DATA WAREHOUSE</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Prestamo</th>
      <th>Id Maestro</th>
      <th>Id Periodo</th>
      <th>Fecha préstamo</th>
      <th>Fecha entrega</th>
      <th>Estado</th>
      <th>Opciones</th>
    </tr>
    <% @prestamos_data.each do |prestamo| %>
      <% if prestamo.errorEstado %>
        <tr>
          <th><%= prestamo.Id_prestamo %></th>
          <th><%= prestamo.Id_maestro_ex %></th>
          <th><%= prestamo.Id_periodo %></th>
          <th><%= prestamo.Fechaprestamo %></th>
          <th><%= prestamo.Fechaentrega %></th>
          <th class="<%= 'alert-danger' if prestamo.errorEstado == 1  %>"><%= prestamo.Estado %></th>
          <th>
            <%= link_to "Editar", edit_prestamos_path(prestamo.Id_prestamo) %>
            <%= link_to "Eliminar", prestamos, method: :delete, data: {confirm: "Deseas eliminar el prestamo con ID: #{prestamo.Id_prestamo}?"} %>
          </th>
        </tr>
      <%end%>
    <%end%>
  </table>
<% when 3 %>
  <h2 class="text-center">PRESTAMOS CON ERROR EN BIBLIOTECA</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
