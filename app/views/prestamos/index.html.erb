          <th><%= prestamo.Id_maestro_ex %></th>
          <th><%= prestamo.Id_periodo %></th>
          <th><%= prestamo.Fechaprestamo %></th>
          <th><%= prestamo.Fechaentrega %></th>
          <th class="<%= 'alert-danger' if prestamo.errorEstado == 1  %>"><%= prestamo.Estado %></th>
          <th>
            <%= link_to "Editar", edit_prestamos_path(prestamo.Id_prestamo) %>
            <%= link_to "Eliminar", prestamos, method: :delete, data: {confirm: "Deseas eliminar el prestamo con ID: #{prestamo.Id_prestamo}?"} %>
          </th>
        </tr>
      <%end%>
    <%end%>
  </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_prestamos_path, data: { confirm: "Desea eliminar todos los registros de prestamo?" }, class: 'btn btn-primary btn-lg' %>
