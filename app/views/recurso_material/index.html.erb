<% case current_user.tipo %>
<% when 1 %>
  <h2 class="text-center">RECURSOS MATERIALES CON ERROR EN DATA WAREHOUSE</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Recurso</th>
      <th>Id Área</th>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th>Costo</th>
      <th>Opciones</th>
    </tr>
    <% @recursos_data.each do |recurso| %>
      <% if recurso.errorNombre || recurso.errorCosto || recurso.errorCantidad %>
        <tr>
          <th><%= recurso.Id_recurso %></th>
          <th><%= recurso.Area_pertenece %></th>
          <th class="<%= 'alert-danger' if recurso.errorNombre == 1  %>"><%= recurso.Nombre %></th>
          <th class="<%= 'alert-danger' if recurso.errorCantidad == 1  %>"><%= recurso.Cantidad %></th>
          <th class="<%= 'alert-danger' if recurso.errorCosto == 1  %>"><%= recurso.Costo %></th>
          <th>
            <%= link_to "Editar", edit_recurso_material_path(recurso.Id_recurso) %>
            <%= link_to "Eliminar", recurso_material_path(recurso.Id_recurso), method: :delete, data: {confirm: "Deseas eliminar el recurso material con ID: #{recurso.Id_recurso}?"} %>
          </th>
        </tr>
      <%end%>
    <%end%>
  </table>
<% when 3 %>
  <h2 class="text-center">RECURSOS MATERIALES CON ERROR EN BIBLIOTECA</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Recurso</th>
      <th>Id Área</th>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th>Costo</th>
      <th>Opciones</th>
    </tr>
    <% @recursos_data.each do |recurso| %>
      <% if recurso.errorNombre || recurso.errorCosto || recurso.errorCantidad %>
        <tr>
          <th><%= recurso.Id_recurso %></th>
          <th><%= recurso.Area_pertenece %></th>
          <th class="<%= 'alert-danger' if recurso.errorNombre == 1  %>"><%= recurso.Nombre %></th>
          <th class="<%= 'alert-danger' if recurso.errorCantidad == 1  %>"><%= recurso.Cantidad %></th>
          <th class="<%= 'alert-danger' if recurso.errorCosto == 1  %>"><%= recurso.Costo %></th>
          <th>
            <%= link_to "Editar", edit_recurso_material_path(recurso.Id_recurso) %>
            <%= link_to "Eliminar", recurso_material_path(recurso.Id_recurso), method: :delete, data: {confirm: "Deseas eliminar el recurso material con ID: #{recurso.Id_recurso}?"} %>
          </th>
        </tr>
      <%end%>
    <%end%>
  </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_recurso_material_path, data: { confirm: "Desea eliminar todos los registros de recurso material?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>
