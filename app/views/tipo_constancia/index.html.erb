<% case current_user.tipo %>
<% when 1 %>
  <h2 class="text-center">TIPOS DE CONSTANCIA EN DATA WAREHOUSE</h2>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Tipo de Constancia</th>
      <th>Nombre</th>
      <th>Costo</th>
      <th>Opciones</th>
    </tr>
    <% @constancia_data.each do |const| %>
      <% if const.errorNombre || const.errorCosto %>
        <tr>
          <th><%= const.Id_Tipo_con%></th>
          <th class="<%= 'alert-danger' if const.errorNombre == 1  %>"><%= const.Nombre %></th>
          <th class="<%= 'alert-danger' if const.errorCosto == 1  %>">$<%= const.Costo %></th>
          <th>
            <%= link_to "Editar", edit_tipo_constancium_path(const.Id_Tipo_con) %>
            <%= link_to "Eliminar", const, method: :delete, data: {confirm: "Deseas eliminar el tipo constancia con ID: #{const.Id_Tipo_con}?"} %>
          </th>
        </tr>
      <%end%>
    <%end%>
  </table>
