<h2 class="text-center">TIPO DE EVALUACIÓN CON ERROR EN DATA WAREHOUSE</h2>
<% case current_user.tipo %>
<% when 1 %>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Tipo Evaluación </th>
      <th>Nombre</th> 
      <th>Descripción</th>
      <th>Opciones</th>
    </tr>
    <% @tipo_eva_data.each do |tipo| %>
      <% if tipo.errorNombre %>
        <tr>
          <th><%= tipo.Id_Tipo_Eva %></th> 
          <th class ='alert alert-danger' ><%= tipo.Nombre %></th>  
          <th><%= tipo.Descripción %></th>
          <th><%= link_to "Editar", edit_tipo_evaluacion_path(tipo.Id_Tipo_Eva) %>
          <%= link_to "Eliminar", tipo, method: :delete, data: {confirm: "Deseas eliminar el Tipo de evaluación con ID: #{tipo.Id_Tipo_Eva}?"} %></th> 
        </tr>
      <%end%>
    <%end%>
  </table>
<% when 2 %>
  <table style="width:100%", class= "table table-striped table-bordered table-sm">
    <tr>
      <th>Id Tipo Evaluación </th>
      <th>Nombre</th> 
      <th>Descripción</th>
      <th>Opciones</th>
    </tr>
    <% @tipo_eva_data.each do |tipo| %>
      <% if tipo.errorNombre %>
        <tr>
          <th><%= tipo.Id_Tipo_Eva %></th> 
          <th class ='alert alert-danger' ><%= tipo.Nombre %></th>  
          <th><%= tipo.Descripción %></th>
          <th><%= link_to "Editar", edit_tipo_evaluacion_path(tipo.Id_Tipo_Eva) %>
          <%= link_to "Eliminar", tipo, method: :delete, data: {confirm: "Deseas eliminar el Tipo de evaluación con ID: #{tipo.Id_Tipo_Eva}?"} %></th> 
        </tr>
      <%end%>
    <%end%>
  </table>
<%end%>
<div class="text-center">
  <%= link_to "Eliminar todo", eliminar_tipo_eva_path, data: { confirm: "Desea eliminar todos los registros de Tipo de Evaluación?" }, class: 'btn btn-primary btn-lg' %>
  <%= link_to "Regresar" , show_tables_path, method: :get , class: 'btn btn-primary btn-lg'%>
</div>